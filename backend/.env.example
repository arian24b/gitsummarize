# GitSummarize Backend Environment Variables
# Copy this file to .env and fill in your actual values

# =================================================================
# API Keys - Required for AI services
# =================================================================

# OpenAI API Key for GPT models
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini API Keys (you can have multiple)
GOOGLE_API_KEY=your_google_api_key_here
NUM_GEMINI_KEYS=1
GEMINI_API_KEY_1=your_gemini_api_key_here
# GEMINI_API_KEY_2=your_second_gemini_api_key_here
# GEMINI_API_KEY_3=your_third_gemini_api_key_here

# =================================================================
# GitHub Integration
# =================================================================

# GitHub Personal Access Token with repo access
GITHUB_TOKEN=your_github_token_here

# =================================================================
# Database Configuration (Supabase)
# =================================================================

# Supabase project URL
SUPABASE_URL=https://your-project.supabase.co

# Supabase anonymous key (public)
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase service role key (private - for backend only)
SUPABASE_ADMIN_KEY=your_supabase_service_role_key_here

# =================================================================
# Application Configuration
# =================================================================

# Environment (development, staging, production)
ENVIRONMENT=production

# Python path for imports
PYTHONPATH=/app/src

# FastAPI configuration
FASTAPI_ENV=production

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =================================================================
# Security Configuration
# =================================================================

# JWT secret for authentication (generate a strong random string)
JWT_SECRET=your_jwt_secret_key_here

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# =================================================================
# Rate Limiting
# =================================================================

# API rate limits
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# =================================================================
# Monitoring and Health Checks
# =================================================================

# Health check interval (seconds)
HEALTH_CHECK_INTERVAL=30

# =================================================================
# Development Configuration
# =================================================================

# UV_PYTHON - Python version for uv (optional, defaults to system Python)
# UV_PYTHON=3.13

# UV cache directory
# UV_CACHE_DIR=/tmp/uv_cache

# =================================================================
# Docker Configuration
# =================================================================

# Container timezone
TZ=UTC

# Container user
USER_ID=1001
GROUP_ID=1001
